<div class="container">
  <div class="cat-head">
    <h1 class="h1" style="text-align:left; margin:0;">เลือกหมวดหมู่</h1>
    <div class="muted">เลือกหมวดเพื่อดูสินค้า</div>
  </div>

  <div class="cat-grid">
    <% categories.forEach(c => { %>
      <a class="cat-card" href="/category/<%= c.id %>">
        <div class="cat-title"><%= c.name %></div>
        <div class="cat-desc muted">กดเพื่อดูสินค้าในหมวดนี้</div>
        <div class="cat-arrow">›</div>
      </a>
    <% }) %>
  </div>
</div>
